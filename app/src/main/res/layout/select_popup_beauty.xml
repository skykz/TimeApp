<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools">

<LinearLayout
    style="?attr/listPopupWindowStyle"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:layout_gravity="center"
    android:background="@drawable/background_shadow"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/close_layout"
        android:layout_width="match_parent"
        android:layout_height="21dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewBeaty"
            android:layout_width="134dp"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:textStyle="bold"
            android:text="@string/beaty"
            tools:ignore="RtlSymmetry"
            android:paddingStart="15dp" />

        <TextView
            android:id="@+id/txtclose"
            android:layout_width="27dp"
            android:layout_height="25dp"
            android:layout_gravity="end"
            android:layout_marginStart="180dp"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/ic_close_popup"
            android:gravity="center"
            android:scaleX="0.7"
            android:scaleY="0.7"
            android:textColor="@color/background"
            android:textStyle="bold"
            android:layout_marginEnd="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp">

        <ImageButton
            android:id="@+id/buttonCarService"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/ripple_background"
            android:contentDescription="@string/haircut"
            app:srcCompat="@drawable/ic_scissors" />

        <ImageButton
            android:id="@+id/buttonBarber"
            android:layout_width="60dp"
            android:layout_height="60dp"

            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/ripple_background"
            android:contentDescription="@string/kosmetolog"
            app:srcCompat="@drawable/ic_mirror"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp" />

        <ImageButton
            android:id="@+id/buttonCarWash"
            android:layout_width="60dp"
            android:layout_height="60dp"


            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/ripple_background"
            android:contentDescription="@string/manicure"
            app:srcCompat="@drawable/ic_manicure"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="10dp" />

        <ImageButton
            android:id="@+id/buttonStom"
            android:layout_width="60dp"
            android:layout_height="60dp"


            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/ripple_background"
            android:contentDescription="@string/makeUp"
            app:srcCompat="@drawable/ic_make_up"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="15dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="348dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="11dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/haircut"
            android:textSize="12sp" />

        <TextView
            android:layout_width="11dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/kosmetolog"
            android:textSize="12sp" />

        <TextView
            android:layout_width="11dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:gravity="center|center_vertical"
            android:text="@string/manicure"
            android:textSize="12sp" />

        <TextView
            android:layout_width="11dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:gravity="center|center_vertical"
            android:text="@string/makeUp"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <ImageButton
            android:id="@+id/buttonCarService1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/ripple_background"
            android:contentDescription="@string/barberShop"
            app:srcCompat="@drawable/ic_barber"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="10dp" />

        <ImageButton
            android:id="@+id/buttonBarber1"
            android:layout_width="60dp"
            android:layout_height="60dp"

            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/ripple_background"
            android:contentDescription="@string/eye"
            app:srcCompat="@drawable/ic_eye"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp" />

        <ImageButton
            android:id="@+id/buttonCarWash1"
            android:layout_width="60dp"
            android:layout_height="60dp"


            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/ripple_background"
            android:contentDescription="@string/massage"
            app:srcCompat="@drawable/ic_stones"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="10dp" />

        <ImageButton
            android:id="@+id/buttonStom1"
            android:layout_width="60dp"
            android:layout_height="60dp"


            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/ripple_background"
            android:contentDescription="@string/spa"
            app:srcCompat="@drawable/ic_bathspa"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="10dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="347dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="11dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/barberShop"
            android:textSize="12sp" />

        <TextView
            android:layout_width="11dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/eye"
            android:textSize="12sp" />

        <TextView
            android:layout_width="11dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:gravity="center_vertical|center"
            android:text="@string/massage"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textMedicine1"
            android:layout_width="11dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/spa"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp">

        <ImageButton
            android:id="@+id/buttonPedikur"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/ripple_background"
            android:contentDescription="@string/pedicure"
            app:srcCompat="@drawable/ic_nail_polish"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="10dp" />

        <ImageButton
            android:id="@+id/buttonUkladka"
            android:layout_width="60dp"
            android:layout_height="60dp"

            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/ripple_background"
            android:contentDescription="@string/ukladka"
            app:srcCompat="@drawable/ic_hair_dryer"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="10dp" />

        <ImageButton
            android:id="@+id/buttonDrawing"
            android:layout_width="60dp"
            android:layout_height="60dp"


            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/ripple_background"
            android:contentDescription="@string/drawhair"
            app:srcCompat="@drawable/ic_tints"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="10dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="278dp"
        android:layout_height="31dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="11dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/pedicure"
            android:textSize="12sp" />

        <TextView
            android:layout_width="11dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/ukladka"
            android:textSize="12sp" />

        <TextView
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="7dp"
            android:layout_marginRight="7dp"
            android:layout_weight="1"
            android:gravity="center|center_vertical"
            android:text="@string/drawhair"
            android:textSize="12sp" />


    </LinearLayout>


</LinearLayout>
</layout>