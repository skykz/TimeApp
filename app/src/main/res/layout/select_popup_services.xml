<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        style="?attr/listPopupWindowStyle"
        android:layout_width="match_parent"
        android:layout_height="491dp"
        android:layout_gravity="center"
        android:background="@drawable/background_shadow"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/close_layout"
            android:layout_width="match_parent"
            android:layout_height="21dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewMed"
                android:layout_width="134dp"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:text="@string/services"
                android:textStyle="bold"
                android:paddingStart="15dp"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/txtclose"
                android:layout_width="27dp"
                android:layout_height="25dp"
                android:layout_gravity="end"
                android:layout_marginStart="180dp"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/ic_close_popup"
                android:gravity="center"
                android:scaleX="0.7"
                android:scaleY="0.7"
                android:textColor="@color/background"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp">

            <ImageButton
                android:id="@+id/buttonServicePhone"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/ripple_background"
                android:contentDescription="@string/serTelephone"
                app:srcCompat="@drawable/ic_cellphone" />

            <ImageButton
                android:id="@+id/buttonServicePC"
                android:layout_width="60dp"
                android:layout_height="60dp"

                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/ripple_background"
                android:contentDescription="@string/serComputer"
                app:srcCompat="@drawable/ic_tvrepair" />

            <ImageButton
                android:id="@+id/buttonServiceShoes"
                android:layout_width="60dp"
                android:layout_height="60dp"


                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/ripple_background"
                android:contentDescription="@string/serShoes"
                app:srcCompat="@drawable/ic_shoefix" />

            <ImageButton
                android:id="@+id/buttonServiceNot"
                android:layout_width="60dp"
                android:layout_height="60dp"


                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/ripple_background"
                android:contentDescription="@string/serNot"
                app:srcCompat="@drawable/ic_libra" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="348dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/serTelephone"
                android:textSize="12sp" />

            <TextView
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/serComputer"
                android:textSize="12sp" />

            <TextView
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:gravity="center|center_vertical"
                android:text="@string/serShoes"
                android:textSize="12sp" />

            <TextView
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:gravity="center|center_vertical"
                android:text="@string/serNot"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <ImageButton
                android:id="@+id/buttonServiceStudio"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/ripple_background"
                android:contentDescription="@string/serCamera"
                app:srcCompat="@drawable/ic_photo_camera" />

            <ImageButton
                android:id="@+id/buttonServiceSew"
                android:layout_width="60dp"
                android:layout_height="60dp"

                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/ripple_background"
                android:contentDescription="@string/serTur"
                app:srcCompat="@drawable/ic_sewing" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="165dp"
            android:layout_height="43dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/serCamera"
                android:textSize="12sp" />

            <TextView
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/serTur"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>
</layout>