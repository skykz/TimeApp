<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scaleType="center"
    android:id="@+id/container_select"

    tools:context=".ui.SelectActivity">

    <ProgressBar
        android:id="@+id/loader_select"
        android:layout_width="73dp"
        android:layout_height="65dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="35dp"
        android:layout_marginBottom="204dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/button_user"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.442"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_user"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_marginStart="125dp"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="484dp"
        android:layout_marginEnd="114dp"
        android:layout_marginRight="114dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/select_button"
        android:elevation="5dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="Я пользователь"
        android:textColor="@color/login_form_button"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/footer_line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.815" />

    <View
        android:id="@+id/footer_line"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginBottom="16dp"
        android:background="#E949AC0D"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="143dp"
        android:layout_height="55dp"
        android:layout_marginStart="113dp"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="113dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/time_green" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="262dp"
        android:layout_height="24dp"
        android:layout_marginStart="72dp"
        android:layout_marginLeft="72dp"
        android:layout_marginBottom="48dp"
        android:gravity="center_vertical"
        android:text="Войти как поставщик услуги"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</android.support.constraint.ConstraintLayout>