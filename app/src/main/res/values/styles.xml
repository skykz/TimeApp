<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#0d7e1e</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/dark_blue</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" >
        <item name="colorControlNormal">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#161515</item>
        <item name="colorPrimaryDark">@color/dark_blue</item>
        <item name="android:textColorSecondary">#161515</item>

        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!---->
    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/shimmer_color</item>
        <item name="android:textSize">20sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/fragment1_m</item> <!-- cursor color -->
        <item name="colorControlNormal">@color/dark_blue</item>
        <item name="colorControlActivated">@color/design_default_color_primary_dark</item>
    </style>

    <style name="SplashScreen" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>

    </style>


</resources>
